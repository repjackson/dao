    .ui.stackable.padded.grid
        .centered.row
            .sixteen.wide.column
                .ui.header
                    i.big.plus.icon
                    |add
            .sixteen.wide.column
                .ui.stackable.blue.cards
                    a.ui.teal.card.add_request
                        .content
                            .ui.icon.teal.header
                                i.hand.holding.heart.icon
                                |request
                    a.ui.maroon.card.add_event
                        .content
