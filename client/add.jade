                                i.calendar.icon
                                |event
                    a.ui.blue.card.add_shift
                        .content
                            .ui.icon.orange.header
                                i.clock.icon
                                |shift
                    a.ui.yellow.card.add_gift
                        .content
                            .ui.icon.green.header
                                i.gift.icon
                                |gift
                    