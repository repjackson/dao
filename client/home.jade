template(name='home')
    .ui.stackable.padded.grid 
        .row
            .sixteen.wide.column
                i.large.database.icon
                if selected_models
                    // #clear_models.ui.active.icon.compact.large.button
                    //     i.remove.icon
                    each selected_models
                        .unselect_model.ui.active.compact.large.circular.button
                            strong #{this}
                each model_results
                    .ui.compact.large.circular.button.select_model
                        strong #{this.name}
                .ui.left.icon.input 
                    i.search.icon
                    input.search_title(type='text' autofocus='' placeholder='title...')
                // div
                i.tags.large.icon
                if selected_tags
                    a#clear_tags.ui.active.icon.compact.large.button
                        i.remove.icon
                    each selected_tags
                        a.unselect_tag.ui.active.compact.large.button
                            strong #{this}
                each tag_results
                    a.ui.large.basic.label.select_tag(href='#')
                        strong #{this.name}
                div        
                i.users.large.icon
                |seller
                if selected_sellers
                    // #clear_sellers.ui.active.icon.compact.large.circular.button
                    //     i.remove.icon
                    each selected_sellers
                        // .unselect_seller.ui.active.compact.large.circular.button
                        a.ui.big.active.image.label.unselect_seller
                            if selected_seller.profile_image_id
                                img.ui.avatar.image(src="{{c.url selected_seller.profile_image_id height=200 width=200 gravity='face' crop='fill'}}" class='')
                            strong #{this}
                each seller_results
                    // .ui.compact.large.circular.basic.button.select_seller
                    a.ui.large.image.basic.label.select_seller
                        if seller.profile_image_id
                            img.ui.avatar.image(src="{{c.url seller.profile_image_id height=200 width=200 gravity='face' crop='fill'}}" class='')
                        strong #{this.name}
                div        
                i.users.large.icon
                |buyer
                if selected_buyers
                    // #clear_buyers.ui.active.icon.compact.large.circular.button
                    //     i.remove.icon
                    each selected_buyers
                        // .unselect_buyer.ui.active.compact.large.circular.button
                        a.ui.big.active.image.label.unselect_buyer
                            if selected_buyer.profile_image_id
                                img.ui.avatar.image(src="{{c.url selected_buyer.profile_image_id height=200 width=200 gravity='face' crop='fill'}}" class='')
                            strong #{this}
                each buyer_results
                    // .ui.compact.large.circular.basic.button.select_buyer
                    a.ui.large.image.basic.label.select_buyer
                        if buyer.profile_image_id
                            img.ui.avatar.image(src="{{c.url buyer.profile_image_id height=200 width=200 gravity='face' crop='fill'}}" class='')

                        strong #{this.name}
                unless one_result
                    i.large.sort.icon(title='sort')
                    +sort_button key='_timestamp' label='added' icon='clock'
                    +sort_button key='title' label='title' 
                    +sort_button key='price' label='price' icon='coins'
            .sixteen.wide.column
                .ui.stackable.cards
                    each docs
                        if key_value_is 'model' 'request'
                            +request_item
                        else if key_value_is 'model' 'offer'
                            +offer_item
                        else if key_value_is 'model' 'debit'
                            +debit_card
                        else if key_value_is 'model' 'order'
                            +order_card
                        else
                            .ui.header #{model}
                            if is_dev
                                i.remove.big.icon.link.delete
                            each tags
                                .ui.label #{this}
                            +print_this
            
template(name='sort_button')
    .ui.button.toggle_sort(class=sort_button_class)
        if icon 
            i.icon(class=icon)
        |#{label}
        if is_selected
            if sorting_up
                i.chevron.up.icon
            else
                i.chevron.down.icon

            
                                    
template(name='request_card')
    .ui.segment.view_request.pointer
        .content
            if youtube_id
                +youtube_view key='youtube_id' direct=true
            else if image_id
                img.ui.raw.image(src="{{c.url image_id width=400 height=300 crop='fill'}}")    
            .header
                .ui.inline.header #{point_bounty}p: #{title}
                if _author.profile_image_id
                    with _author
                        img.ui.avatar.image(src="{{c.url profile_image_id height=500 width=500 gravity='face' crop='fill'}}" class=user_class title=username)
                | #{_author.username}
            |!{description}
            .meta #{when}
            // each tags 
            //     .ui.tiny.basic.label #{this}
            if doc_comments.count
                .meta
                    each doc_comments 
                        i.grey.chat.outline.icon
                        img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}" class=user_class)
                        |#{body}
                        div


                                    
template(name='offer_card')
    .ui.card.view_offer.pointer
        .content
            if image_id
                img.ui.raw.image(src="{{c.url image_id width=400 height=300 crop='fill'}}")    
            .header
                .ui.inline.header #{title}
                if _author.profile_image_id
                    with _author
                        img.ui.avatar.image(src="{{c.url profile_image_id height=500 width=500 gravity='face' crop='fill'}}" class=user_class title=username)
                | #{_author.username}
            // |!{description}
            .meta #{when}
            if point_price
                |#{point_price}p
            // each tags 
            //     .ui.tiny.basic.label #{this}
            +comments_view_small
            
            
template(name='comments_view_small')            
    if doc_comments.count
        .meta
            each doc_comments 
                i.grey.chat.outline.icon
                img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}" class=user_class)
                |#{body}
                div


                                    
                                    
