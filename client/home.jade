template(name='home')
    .ui.stackable.grid
        .sixteen.wide.column
            each selected_tags
                +unselect_tag
            .ui.left.icon.pointer.zoom.input 
                i.search.icon
                input.search_title(type='text' autofocus='')
            each tag_results
                +tag_selector
    .ui.stackable.centered.grid
        if one_post
            each docs
                .twelve.wide.column
                    +reddit_card
        else
            each docs
                .five.wide.column
