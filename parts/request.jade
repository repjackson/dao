template(name='requests')
    .ui.padded.stackable.grid
        .sixteen.wide.column
            // .ui.button 
            //     |debit count
            // .ui.button 
            //     |debit amount
            // .ui.button 
            //     |credit count
            // .ui.button 
            //     |credit amount
            .ui.header
                +icolor name='sell'
                |requests
            if is_admin
                .ui.button.add_request
                    i.plus.icon
                    |add request
            .scrolling
                .ui.stackable.six.cards
                    each next_requests
                        +request_item
        .sixteen.wide.column
            // +request_cloud


template(name='request_item')
    a.card(href="/request/#{_id}/view")
        .image
            img.ui.raw.image(src="{{c.url job.image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/request/#{_id}/view")
                |#{job.title}
            .ui.list 
                .item #{date} date
                .item from {{from_now start_datetime}}
                .item to {{from_now end_datetime}}
                .item #{end_time} end time
                .item #{steward.username} leader(s)
            .ui.list
                each contributers
                    .item #{username} contributer
                //- |#{username}
        .content
        


template(name='request_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    // if can_edit
                    a(href="/shop" title='shop')
                        +icolor name='shop' cl='ui inline image pointer'
                        // i.store.big.icon
                        // span.mobile.hidden shop
                    .ui.inline.header 
                        |product
                    .ui.large.inline.header #{title}
                .eight.wide.column
                    .ui.center.aligned.header 
                        +icon name='hand-planting'
                        |view request
                .four.wide.column
                    if is_admin
                        .ui.button.delete_request
                            |delete
                            i.large.red.remove.icon
                        a.ui.button.edit_request(href="/request/#{_id}/edit")
                            i.blue.pencil.icon
                            |edit
            .row 
                .four.wide.column
                .eight.wide.column
                    .ui.stackable.two.column.grid
                        .column
                            .ui.header 
                                small author
                            a.ui.header(href="/user/#{_author.username}") 
                                img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                                |#{_author.username}
                        .column
                            .ui.header
                                |audience
                            
                            // a.ui.header(href="/user/#{target.username}")
                            //     img.ui.avatar.image(src="{{c.url target.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            //     |#{target.username}
                            
                    +number_view key='bounty' label='bounty' direct=true
                    +textarea_view key='description' label='description' direct=true
                    +image_view key='image_id' label='image' direct=true
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit

template(name='request_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    .ui.button.delete_item
                        i.large.red.ban.icon
                        |cancel
                .eight.wide.column
                    .ui.center.aligned.header 
                        +icon name='hand-planting'
                        |edit request
                .four.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
            .row 
                .four.wide.column
                .eight.wide.column
                    .ui.header 
                        |audience
                    .ui.disabled.button
                        |everyone
                    .ui.disabled.button
                        |groups
                    .ui.disabled.button
                        |specific people
                    +number_edit key='bounty' label='bounty' direct=true
                    +key_value_edit key='bounty' value=1
                    +key_value_edit key='bounty' value=5
                    +key_value_edit key='bounty' value=10
                    +key_value_edit key='bounty' value=20
                    +textarea_edit key='description' label='description' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    //- +array_edit key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.header your points: #{currentUser.points}
                    .ui.small.header publishing request holds points from your balance and dispenses them when request is verified complete
                    if published
                        .ui.inline.header status:
                        .ui.green.inline.header published
                        .ui.fluid.teal.button.unpublish
                            i.undo.icon
                            |unpublish
                    else
                        .ui.fluid.green.button.publish
                            i.checkmark.icon
                            |publish
