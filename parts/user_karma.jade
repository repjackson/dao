template(name='user_karma')  
    .ui.stackable.padded.grid 
        .row
            .sixteen.wide.column
                .ui.header 
                    i.coins.icon
                    |karma
                i.refresh.circular.link.icon.refresh_karma_stats
            .four.wide.column
                .ui.header expenses
                .ui.large.list
                    .item #{post_count} posts (1k each)
                    .item #{post_count} downvotes (1k each)
                    .item #{post_count} upvotes (1k each)
                    .item #{post_count} reddit (1k each)
                    .item #{post_count} wiki (+2k each)
                    .item #{post_count} orders
                    .item #{post_count} sales
                    .item #{post_count} deposits
                    .item #{post_count} cashouts
                .ui.basic.label #{total_karma_amount}k karma
                // |received
                .ui.basic.label(title='karma count') #{credit_count} total gifts 
                .ui.basic.label(title='rank') ##{global_credit_count_rank} count rank
            .four.wide.column
                .ui.header biggest sale
            .four.wide.column
                .ui.header most contacted
            .four.wide.column
                .ui.header biggest expense
        
    i.tags.icon(title='credit tags')
    each karma_tags
        .ui.basic.circular.label #{title}
            small #{count}
        
    .ui.stackable.cards.scrolling
        each user_karma
            // +karma
            
template(name='karma')            
    a.ui.card(href="/m/vote/#{_id}/view")
        .content
            .header
                strong #{points}pt 
                // |from 
                if author.profile_image_id
                    img.ui.avatar.image(src="{{c.url author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                |#{_author.shortname}
            small #{when}
            div
            |#{description}
            div
            each tags
                .ui.basic.label #{this}
                

template(name='user_karma_small')
    .ui.header 
        i.minus.icon
        |#{total_karma_amount}p
        |received
        .ui.basic.label #{karma_count} karma
            | ##{global_karma_count_rank}
    div
    .ui.link.list.scrolling
        each user_karma
            .item
                if author.profile_image_id
                    img.ui.avatar.image(src="{{c.url author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                .content
                    .header
                        strong #{amount}pt 
                        |from 
                        a(href="/user/#{author.username}")
                            |#{author.username}
                    .description
                        a(href="/m/debit/#{_id}/view")
                            |#{when}
                .content
                    .description
                        |#{description}
                        each tags
                            .ui.basic.label #{this}
                if is_admin 
                    +remove_button
                .spacer
                
template(name='user_kin')  
