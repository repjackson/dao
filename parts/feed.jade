template(name='feed')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.inline.header 
                    +icon name='news'
                    |feed
                .ui.icon.button.add_post 
                    i.plus.icon
                .ui.header 
                    i.grey.users.icon
                    |members
                each members 
                    if profile_image_id
                        a(href="/user/#{username}")
                            img.ui.tiny.pointer.inline.circular.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
            .twelve.wide.column
                // .ui.segment
                //     .ui.big.fluid.input
                //         input(type='text' placeholder='write something...')
                each posts 
                    +post_segment
                    
                    
                    
                    
template(name='post_segment')
    .ui.fluid.segment.view_post.pointer
        a.ui.header(href="/m/post/#{_id}/view") #{title}
        
        

template(name='post_view')
    with current_doc
        .ui.stackable.padded.grid
            .middle.aligned.row 
                .sixteen.wide.column
                    a(href="/feed")
                        +icolor name='news' cl='ui image inline pointer'
                    .ui.small.inline.header(title='viewing post')
                        +icolor name='paper'
                        // i.calendar.icon
                        // |view post
                    .ui.large.inline.header #{title}
                    // div
                    // .ui.inline.grey.header {{from_now start_datetime}}
                    
                    if can_edit
                        a.edit_post(href="/m/post/#{_id}/edit" title='edit')
                            i.large.blue.link.pencil.icon

            .row 
                .four.wide.column
                    img.ui.fluid.rounded.image(src="{{c.url image_id }}")
                    .ui.tertiary.segment
                        .ui.header 
                            small author
                        a.ui.header(href="/user/#{_author.username}") 
                            img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{_author.username}
                    .ui.small.grey.header 
                        i.line.chart.icon
                        |stats
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    .ui.hidden.divider
                .twelve.wide.column
                    // a.ui.header(href="/user/#{target.username}")
                    //     |#{target.username}
                    .ui.segment
                        |!{content}
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    // +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                // .four.wide.column
                

