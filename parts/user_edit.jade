template(name='password_edit')
    .ui.small.header
        //- +i name='password'
        i.lock.icon
        |change password
    //- .ui.fluid.input
    //-     input#password(type='password', placeholder='old password')
    .ui.fluid.icon.input
        input#new_password(type='password', placeholder='new password')
