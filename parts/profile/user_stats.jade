template(name='user_stats')  
    .ui.center.aligned.header 
        +icon name='line-chart'
        |user stats
    each user_events
        .ui.segment
            .ui.small.header #{date} #{start_time}
            div
            +user_list_toggle key='read_by_ids' label='mark read' icon='eye'
            if can_edit
                +remove_button
            //- div
            +author_info
            +creation_info
