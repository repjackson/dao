        each requests
            .ui.segment
                a.ui.header(href="/request/#{_id}/view") #{bounty}pts: #{title}
                | #{description}
                div
                if is_admin
                    +remove_button
                    +print_this
                
                //- div
                +author_info
                +creation_info
