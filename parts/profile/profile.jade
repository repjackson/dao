template(name='profile_layout')
    +nav
    .ui.bottom.attached.pushable.segment
        // +top_sidebar
        +left_sidebar
        +right_sidebar
        #main_area.global_container.pusher
            with user
                .ui.stackable.padded.grid
                    .four.wide.column
                        span.mobile.only
                            img.ui.centered.tiny.inline.spaced.circular.image(src="{{c.url profile_image_id height=500 width=500 gravity='face' crop='fill'}}" class=user_class)
                        span.mobile.hidden
                            img.ui.centered.fluid.circular.image(src="{{c.url profile_image_id height=500 width=500 gravity='face' crop='fill'}}" class=user_class) 
                        a.ui.large.header.refresh_user_stats(href="/user/#{username}" style="color:#{current_user.theme_color};") 
                            if spirit_animal
                                span(title="spirit animal #{spirit_animal}")
                                    +icolor name=spirit_animal cl='ui inline image'

                            |#{name}
                        // div
                        a.ui.header.refresh_user_stats(href="/user/#{username}" style="color:#{current_user.theme_color};") 
                            |@#{username}
                        .ui.inline.header(style="color:#{current_user.theme_color};") #{points}pts
                        .ui.big.basic.label(style="color:#{current_user.theme_color};") {{fixed one_ratio}} ONE|Ratio
                        .ui.large.basic.label(style="color:#{current_user.theme_color};") #{flow_volume} volume
                        //- .ui.compact.icon.button.refresh_user_stats(title='refresh stats')
                        //-     i.refresh.icon
                        if is_current_user
                            +boolean_edit key='online' label='online' direct=true
                            +text_edit key='current_status' label='status' icon='clock' direct=true
                        else 
                            if online 
                                .ui.green.large.label 
                                    i.large.checkmark.icon
                                    |online
                            else
                                .ui.disabled.large.label 
                                    |offline
                            if current_status
                                .ui.basic.big.label(title='status' style="color:#{current_user.theme_color};")
                                    i.grey.clock.icon
                                    |#{current_status}
                        if is_dev
                            .ui.small.inline.header #{_id}
                        if is_admin
                            a.ui.large.icon.circular.basic.button(href="/user/#{username}/edit" title='admin edit account' style="color:#{current_user.theme_color};")
                                i.shield.large.icon
                                // |account
                        if is_current_user
                            a.ui.circular.icon.basic.button(href="/user/#{username}/edit" title='edit your account' style="color:#{current_user.theme_color};")
                                i.cog.big.icon
                                // |account
                            a.ui.circular.icon.basic.button.logout(href="#" title='log out')
                                i.sign.out.big.icon
                                // |log out
                        
                        // unless is_current_user
                        //     if currentUser
                        //         // div
                        //         +user_friend_button 
                        // a.ui.large.icon.button(href="/user/#{username}/dashboard" class="{{isActivePath 'user_dashboard'}}")
                        //     i.dashboard.large.icon
                        //     // |dashboard
                        // if is_current_user
                        //     a.ui.large.icon.button(href="/user/#{username}/edit/membership" class="{{isActivePath 'user_finance'}}")
                        //         i.money.large.icon
                        unless is_current_user
                            if i_have_points
                                .ui.basic.button.send(title='send points')
                                    i.red.gift.large.green.icon
                                    span gift
                                .ui.basic.button.request(title='request points')
                                    i.concierge.bell.large.teal.icon
                                    span request
                            else
                                .ui.disabled.basic.button(title='send points')
                                    i.red.gift.large.green.icon
                                    span send
                                .ui.disabled.basic.button(title='request points')
                                    i.concierge.bell.teal.icon
                                    span request
                            a.ui.large.compact.basic.button(href="/user/#{username}/messages" class="{{isActivePath 'user_messages'}}" title="#{user.username} messages")
                                i.chat.large.blue.icon
                                | message
                        // if is_tech_admin
                        //     .ui.button.switch_to_one
                        //         |switch to one
        
        
                    .twelve.wide.column
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/" class="{{isActivePath 'user_dashboard'}}" title="#{user.username} dashboard")
                            i.large.dashboard.icon
                            span.mobile.hidden dashboard
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/about" class="{{isActivePath 'user_about'}}" title="#{user.username} info")
                            i.info.large.icon
                            span.mobile.hidden about
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/credits" class="{{isActivePath 'user_credits'}}" title="#{user.username} credits")
                            i.large.chevron.down.icon
                            span.mobile.hidden credits
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/debits" class="{{isActivePath 'user_sent'}}" title="#{user.username} sent")
                            i.large.red.gift.icon
                            span.mobile.hidden sent
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/events" class="{{isActivePath 'user_events'}}" title="#{user.username} events")
                            i.calendar.large.icon
                            span.mobile.hidden events
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/requests" class="{{isActivePath 'user_requests'}}" title="#{user.username} requests")
                            i.large.concierge.bell.icon
                            span.mobile.hidden requests
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/offers" class="{{isActivePath 'user_offers'}}" title="#{user.username} offers")
                            i.large.hand.holding.heart.icon
                            span.mobile.hidden offers
                        a.ui.large.compact.basic.button.profile_nav_item(href="/user/#{username}/messages" class="{{isActivePath 'user_messages'}}" title="#{user.username} messages")
                            i.chat.large.icon
                            span.mobile.hidden chat
                        // a.ui.large.compact.basic.button(href="/user/#{username}/badges" class="{{isActivePath 'user_badges'}}" title="#{user.username} badges")
                        //     i.certificate.large.icon
                        //     span.mobile.hidden badges
                        a.ui.large.compact.basic.button(href="/user/#{username}/genekeys" class="{{isActivePath 'user_genekeys'}}" title="#{user.username} genekeys")
                            +icolor name='dna-helix' cl='ui avatar image'
                            span.mobile.hidden genekeys
                        .spacer
                        .spacer
                        +yield    
                      





template(name='user_friend_button')
    if is_friend
        .ui.blue.large.icon.button.unfriend(title='unfriend')
            i.checkmark.large.icon
    else
        .ui.large.icon.button.friend(title='friend')
            i.user.plus.large.icon
