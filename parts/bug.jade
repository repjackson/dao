template(name='bug_segment')
    .ui.fluid.segment
        a.ui.header.view_bug.pointer(href="/m/bug/#{_id}/view") #{title}
        |!{content}
        each tags
            .ui.label #{this}
        +voting_full
        
        

template(name='bug_view')
    with current_doc
        .ui.stackable.padded.grid
            .middle.aligned.row 
                .sixteen.wide.column
                    a.ui.basic.icon.button(href="/bugs")
                        i.large.bug.icon
                    .ui.large.inline.header #{title}
                    // div
                    // .ui.inline.grey.header {{from_now start_datetime}}
                    
                    if can_edit
                        a.ui.icon.button.edit_bug(href="/m/bug/#{_id}/edit" title='edit')
                            i.large.pencil.icon

            .row 
                .four.wide.column
                    img.ui.fluid.rounded.image(src="{{c.url image_id }}")
                    .ui.tertiary.segment
                        .ui.header 
                            small author
                        a.ui.header(href="/user/#{_author.username}") 
                            img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{_author.username}
                    .ui.small.grey.header 
                        i.line.chart.icon
                        |stats
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    .ui.hidden.divider
                .twelve.wide.column
                    // a.ui.header(href="/user/#{target.username}")
                    //     |#{target.username}
                    .ui.segment
                        |!{content}
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    // +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
