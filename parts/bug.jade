template(name='bug_edit')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row 
                .four.wide.column
                    a.ui.icon.green.big.button(href="/m/bug/#{_id}/view" title='save')
                        i.checkmark.big.icon
                    .ui.inline.header 
                        +icolor name='news' cl='ui image inline pointer'
                        |edit bug
                    .ui.icon.button.delete_item(title='delete')
                        i.large.remove.icon
                    .ui.header 
                        small author
                        |#{_author.username}
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    +boolean_edit key='published' icon='visible' direct=true
                    if is_admin 
                        +text_edit key='model' label='model' direct=true
