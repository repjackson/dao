template(name='product_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    .ui.button.delete_item
                        |delete
                        i.large.red.remove.icon
                .eight.wide.column
                    .ui.header 
                        +icon name='hand-planting'
                        |edit product
                .four.wide.column
            .row
                .four.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    +number_edit key='inventory' label='inventory' direct=true                    
                .eight.wide.column
                    +text_edit key='title' label='title' direct=true
                    .ui.header
                        |audience
                            
                    +number_edit key='point_price' label='point_price' direct=true
                    +key_value_edit key='point_price' value=1
                    +key_value_edit key='point_price' value=5
                    +key_value_edit key='point_price' value=10
                    +key_value_edit key='point_price' value=20
                    +number_edit key='usd_price' label='usd price' direct=true
                    +textarea_edit key='description' label='description' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    //- +array_edit key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    a.ui.fluid.green.big.button(href="/product/#{_id}/view")
                        i.checkmark.icon
                        |save
