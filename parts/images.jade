template(name='pictures')
    .ui.stackable.padded.grid 
        .four.wide.column
            .ui.header 
                i.picture.icon
                |pictures
            if currentUser
                i.circular.plus.link.icon.add_picture
        .twelve.wide.column
            each picture_docs 
                .ui.segment
                    a.ui.header(href="/picture/#{_id}/view") #{title}
                    if private 
                        i.lock.icon
                    .ui.list
                        .item #{member_ids.length} members
                        .item #{post_count} posts
                        .item #{post_count} offers
                        .item #{post_count} requests
                    +vote
                    +viewing
                    +join
                    

template(name='picture_card')
    .card
        a.image(href="/m/picture/#{_id}/view")
            if icon 
                +icolorlg name=icon
            else
                img.ui.raw.image(src="{{c.url image_id width=400 height=300 crop='fill'}}" class=currentUser.invert_class)
                img.ui.raw.image(src=url class=currentUser.invert_class)    
                img.ui.raw.image(src=reddit_image class=currentUser.invert_class)    
        .content
            a.ui.header(href="/m/picture/#{_id}/view")
                |#{title}
            |#{location}
            |!{description}
            +vote
        


template(name='picture_view')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row
                .four.wide.center.aligned.column
                    // if can_edit
                    a(href="/m/picture" title='pictures')
                        i.circular.large.picture.link.icon
                .eight.wide.center.aligned.column
                    if icon
                        i.icon(class=icon)
                    else
                        i.circular.large.picture.icon
                    .ui.center.aligned.inline.header 
                        small viewing picture
                        |#{title}
                        if private
                            i.lock.icon(title='private')
                .four.wide.center.aligned.column
                    if can_edit
                        a.edit_picture(href="/picture/#{_id}/edit")
                            i.big.pencil.circular.link.icon
            .row 
                .four.wide.column
                    +vote
                    .ui.header
                        i.marker.icon 
                        |#{location}
                    a.ui.header(href="/user/#{_author.username}") 
                        img.ui.avatar.picture(src="{{c.url _author.profile_picture_id height=200 width=200 gravity='face' crop='fill'}}")
                        |#{_author.username}
                    +image_view key='picture_id' label='picture' direct=true
                .eight.wide.column
                    img.ui.raw.image(src="{{c.url image_id width=400 height=300 crop='fill'}}" class=currentUser.invert_class)
                    img.ui.raw.image(src=url class=currentUser.invert_class)    
                    img.ui.raw.image(src=reddit_image class=currentUser.invert_class)    

                    +textarea_view key='description' label='description' direct=true
                    div 
                    .spacer
                    .spacer
                    +comments
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    +array_view key='tags' label='tags' direct=true
                    
                    +tip
                    
                    
