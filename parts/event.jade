template(name='events')
    .ui.padded.stackable.grid
        .sixteen.wide.column
            // .ui.button 
            //     |debit count
            // .ui.button 
            //     |debit amount
            // .ui.button 
            //     |credit count
            // .ui.button 
            //     |credit amount
            .ui.header 
                i.calendar.icon
                |events
            if is_admin
                .ui.button.add_event
                    i.plus.icon
                    |add event
            .scrolling
                .ui.stackable.six.cards
                    each next_events
                        +event_item
        .sixteen.wide.column
            // +event_cloud


template(name='event_item')
    .ui.card
        if image_id
            a(href="/event/#{_id}/view")
                img.ui.image(src="{{c.url image_id height=200 width=200 gravity='face' crop='fill'}}")
        .content
            a.ui.header(href="/event/#{_id}/view") #{title}
            |#{when}
            |{{from_now start_datetime}}
            |- {{from_now end_datetime}}
        .content
            .ui.basic.green.button.pick_going(title='going')
                i.thumbs.up.outline.icon
                |#{going_user_ids.length}
                each going
                    |#{username}
            .ui.basic.yellow.button.pick_maybe(title='maybe')
                i.minus.icon
                | #{maybe_user_ids.length}
                each maybe_going
                    |#{username}
            .ui.basic.red.button.pick_not(title='not going')
                i.thumbs.down.outline.icon
                | #{not_user_ids.length}
                each not_going
                    | #{username}
        
            
        a.ui.button(href="/event/#{_id}/view")
            |view
            i.right.chevron.icon



template(name='event_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.center.aligned.column
                    a.ui.fluid.large.button(href="/events")
                        i.calendar.icon
                        |events
                .eight.wide.center.aligned.column
                    .ui.small.inline.header 
                        // +icon name='hand-planting'
                        i.calendar.icon
                        |view event
                    .ui.large.inline.header #{title}
                    
                .four.wide.center.aligned.column
                    if can_edit
                        a.ui.circular.icon.button.edit_event(href="/event/#{_id}/edit" title='edit')
                            i.big.blue.pencil.icon

            .row 
                .four.wide.column
                    .ui.secondary.segment
                        .ui.header 
                            small author
                        a.ui.header(href="/user/#{_author.username}") 
                            img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{_author.username}
                    .ui.header
                        |#{max_attendees} max attendees
                    .ui.large.button.pick_going 
                        i.green.checkmark.icon
                        |going
                    .ui.big.list
                        each going 
                            a.item(href="/user/#{username}") #{username}
                    .ui.large.button.pick_maybe 
                        i.yellow.minus.icon
                        |maybe
                    .ui.big.list
                        each maybe_going
                            a.item(href="/user/#{username}") #{username}
                    .ui.large.button.pick_not
                        i.red.remove.icon
                        |not going
                    .ui.big.list
                        each not_going
                            a.item(href="/user/#{username}") #{username}
                        
                    .ui.small.grey.header 
                        i.line.chart.icon
                        |stats
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    .ui.hidden.divider
                .eight.wide.column
                    +image_view key='image_id' label='image' direct=true
                    // a.ui.header(href="/user/#{target.username}")
                    //     img.ui.avatar.image(src="{{c.url target.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                    //     |#{target.username}
                    +textarea_view key='description' label='description' direct=true
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    // +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.small.header #{tickets_left} tickets left
                    .ui.big.fluid.green.button.buy_for_usd
                        i.cart.icon
                        |buy for 
                        |$#{usd_price}
                    .ui.horizontal.divider or
                    .ui.big.fluid.green.button.buy_for_points
                        i.cart.icon
                        |buy for 
                        |#{point_price} points
                    .ui.header your points #{currentUser.points}
                
                    .ui.header 
                        i.clock.icon
                        |#{ticket_purchases} purchased tickets
                    .ui.large.link.selection.list
                        each tickets
                            a.ui.item(href="/ticket/#{_id}/view") 
                                .content
                                    .header
                                        if is_usd
                                            .ui.inline.green.header ${{money_format amount}}
                                        else
                                            .ui.inline.header #{point_amount}pts
                                        
                                        |#{when} #{_author_username}
                            if is_admin
                                +remove_button

                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit

template(name='event_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    .ui.button.delete_item
                        |delete
                        i.large.red.remove.icon
                .eight.wide.column
                    .ui.header 
                        i.calendar.icon
                        |edit event
                .four.wide.column
            .row
                .four.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    +datetime_edit key='start_datetime' label='start' direct=true
                    +datetime_edit key='end_datetime' label='end' direct=true
                    
                .four.wide.column
                    +text_edit key='title' label='title' direct=true
                    .ui.header
                        |audience
                    +number_edit key='max_attendees' label='max attendees' direct=true
                    +number_edit key='point_price' label='points per ticket' direct=true
                    +key_value_edit key='point_price' value=1
                    +key_value_edit key='point_price' value=5
                    +key_value_edit key='point_price' value=10
                    +key_value_edit key='point_price' value=20
                .four.wide.column
                    +number_edit key='usd_price' label='dollars per ticket' direct=true
                    +textarea_edit key='description' label='description' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    //- +array_edit key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    a.ui.fluid.green.big.button(href="/event/#{_id}/view")
                        i.checkmark.icon
