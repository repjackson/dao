template(name='offer_item')
    .ui.card.pointer.offer_item
        if image_id
            a.image(href="/offer/#{_id}/view")
                img.ui.image(src="{{c.url image_id width=400 height=300 crop='fill'}}")    
        .content
            a.header(href="/offer/#{_id}/view")
                |#{title}
                if complete
                    i.green.checkmark.icon
            .meta
                |by 
                if _author.profile_image_id
                    img.ui.avatar.compact.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                |#{_author.username}
                .ui.label #{when}
    
                .ui.big.basic.label
                    |#{price} credit
                if rental
                    .ui.small.header
                        i.checkmark.icon
                        |rental
            .description
                |!{description}
                +comments_view_small    
    // .ui.divider

template(name='offer_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    .ui.inline.header 
                        small offer: 
                    .ui.inline.large.header 
                        |#{title}
                    if can_edit
                        a.ui.circular.icon.button.edit_offer(href="/offer/#{_id}/edit")
                            i.large.pencil.icon
                    if image_id
                        img.ui.rounded.image(src="{{c.url image_id gravity='face' crop='fit'}}")
                    .ui.small.inline.header posted by
                    a.ui.header(href="/user/#{_author.username}") 
                        img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                        |#{_author.username}
                    .ui.inline.small.header #{when}
                    +boolean_view key='rental' direct=true
                    +boolean_view key='for_sale' label='for sale' direct=true
                    div
                    +array_view key='location_tags' label='location_tags' direct=true
                    div
                    +voting_full
                .six.wide.column
                    .f13
                        |!{description}
                    // a.ui.header(href="/user/#{target.username}")
                    //     img.ui.avatar.image(src="{{c.url target.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                    //     |#{target.username}
                    .spacer
                    i.large.tags.icon
                    each tags 
                        .ui.basic.large.label #{this}
                    .spacer
                    .spacer
                    +comments
                .six.wide.column
                    .ui.large.fluid.green.circular.button.buy
                        i.cart.arrow.down.large.icon
                        |buy for #{sale_credit_price} credit
                    .ui.header #{inventory} left
                    
                    .ui.dividing.header 
                        i.list.icon
                        // +icolor name='activity-history' cl='ui inline image'
                        |#{offer_purchases.count} sales
                    .ui.link.selection.list.medscroll
                        each orders
                            a.ui.item(href="/order/#{_id}/view") 
                                .content
                                    .header
                                        .ui.inline.header #{purchase_price}c
                                        
                                        |#{when} 
                                        img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                                        |#{_author.username}
                                        .ui.small.header submitted: #{submitted}
                                        .ui.small.header transfer: #{transfer}
                                        if key_value_is 'transfer' 'delivery'
                                            +datetime_view key='delivery_datetime' label='delivery time' direct=true
                                            +textarea_view key='delivery_location' label='delivery location' direct=true
                                            +textarea_view key='delivery_notes' label='delivery notes' direct=true
                                            +text_view key='notes' label='notes' direct=true
                                            +boolean_view key='delivery_started' direct=true
                                            if delivery_started
                                                div
                                                +boolean_view key='delivery_complete' direct=true
                                                if delivery_complete
                                                    +image_view key='delivery_image' direct=true
                                                
                                                    .ui.header customer
                                                    +boolean_view key='delivery_accepted' label='delivery accepted' direct=true                    
                                        if key_value_is 'transfer' 'pickup'
                                            +datetime_view key='pickup_datetime' label='pickup date time' direct=true
                                            +textarea_view key='notes' label='notes' direct=true
    
                                        
                                    // if can_edit 
                                    //     i.
                                    //     +icolor name='return-purchase' cl='ui mini inline image return crediter'
                    

template(name='offer_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .sixteen.wide.column
                    a.ui.green.icon.button(href="/offer/#{_id}/view" title='save')
                        i.checkmark.big.icon
                    .ui.inline.large.header 
                        small edit offer:
                        |#{title}
                    i.large.remove.link.circular.icon.delete_offer(title='delete offer')
            .row 
                .four.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    +text_edit key='title' icon='header' direct=true
                    +boolean_edit key='rental' direct=true
                    +boolean_edit key='for_sale' label='for sale' direct=true
                .six.wide.column
                    div
                    +boolean_edit key='has_description' label='description' direct=true
                    if has_description
                        +html_edit key='description' label='description' direct=true
                    div
                    +boolean_edit key='has_image' label='image' direct=true
                    if has_image
                        +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    div
                    +boolean_edit key='has_location' label='location' direct=true
                    if has_location
                        +text_edit key='location' label='location' icon='marker' direct=true
                        +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                .six.wide.column
                    .ui.header your credits: #{currentUser.credits}
                    +number_edit key='inventory' label='inventory' direct=true
                    div
                    +float_edit key='price' label='price' direct=true
                    
                    