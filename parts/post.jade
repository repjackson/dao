template(name='post_card')
    .ui.stackable.grid
        .four.wide.column
            a.ui.fluid.image(href="/post/#{_id}/view")
                if watson.metadata.image
                    img(src=watson.metadata.image class=currentUser.invert_class)    
                if is_youtube
                    .ui.embed(data-source="youtube" data-id=youtube_parse class=currentUser.invert_class)
                if is_image
                    img.ui.image(src=url class=currentUser.invert_class)    
            if youtube_id
                +youtube_view key='youtube_id' direct=true
            if image_id
                a.image(href="/post/#{_id}/view")
                    img.ui.image(src="{{c.url image_id }}" class=currentUser.invert_class)
        .twelve.wide.column
            .content
                a.ui.header(href="/post/#{_id}/view") #{title}
                .description.f12.smallscroll
                    if body
                        |!{body}
                    else if description
                        |!{description}
                    else if tone
                        +tone
                .ui.label domain: #{domain}
                    // if tone
                    //     +tone
                    // |!{body}
                +vote
                // a(href="/post/#{_id}/view")
                //     i.right.chevron.circular.link.big.icon
                // .ui.label #{points}p
                // .ui.label #{imported_points}ip
                if is_admin
                    +print_this
                +array_edit key='tags' direct=true
                each tags
                    a.ui.label.add_tag
                        // i.minus.link.grey.icon.minus_tag(title='pay a point to lessen tag')
                        | #{this}
                        // i.plus.link.grey.icon.plus_tag(title='pay a point to promote tag')
                |#{when}
                if can_edit 
                    a.ui.circular.icon.button(href="/post/#{_id}/edit")
                        i.pencil.icon
                a.ui.icon.button(href="/post/#{_id}/view")
                    i.chevron.right.icon
                // +comments_view_small   
                +call_watson mode='url' key='url'
                if watson
                    +call_tone mode='url' key='url'
            
        // .ui.divider
    
