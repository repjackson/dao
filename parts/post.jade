template(name='post_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .eight.wide.column
                    a.ui.icon.circular.large.button(href="/post/#{_id}/view" title='save' class=currentUser.invert_class)
                        i.checkmark.big.icon
                    .ui.inline.large.header 
                        small edit post
                        // |#{title}
                    +image_edit key='image_id' label='image' direct=true
                .eight.wide.column
                    // |tag = -1p
                    +smart_tagger
                    +textarea_edit key='body' label='body' direct=true
                    if description
                        +html_edit key='description' label='description' direct=true
                    +youtube_edit key='youtube_id' label='youtube id' direct=true
                    i.remove.link.circular.big.icon.delete_post(title='delete post')
                    
                    
template(name='post_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .ten.wide.column.scrolling
                
                    if title 
                        .ui.header #{title}
                    if url 
                        a(href=url target='_window') #{url}
                        img.ui.image(src=url class=currentUser.invert_class)    
                        
                    if image_id
                        a(href="{{c.url image_id }}" target='_window')
                            img.ui.rounded.image(src="{{c.url image_id gravity='face' crop='fit'}}" class=currentUser.invert_class)
                    if youtube_id
                        +youtube_view key='youtube_id' direct=true
                    .f12
                        // |{{nl2br body}}
                        if tone
                            +tone
                        if key_value_is 'model' 'reddit'
                            |!{body}
                        else
                            |!{description}
                    if is_admin
                        +viewing
                    // +comments
                .six.wide.column.scrolling
                    if watson.metadata.image
                        img.ui.image(src=watson.metadata.image class=currentUser.invert_class)    
                    if can_edit
                        a.ui.circular.icon.button.edit_post(href="/post/#{_id}/edit")
                            i.large.pencil.icon
                    .ui.inline.small.header #{when}
                    // .ui.label #{points}p
                    // .ui.label #{imported_points}ip
                    +call_watson key='url' mode='url'
                    if watson
                        +call_tone mode='url' key='url'
                    
                    // +vote
                    // .ui.large.link.list
                    //     each votes
                    //         .item
                    //             a(href="/user/#{_author_username}") #{_author_username}
                    //             |#{points} #{when}
                    //             if can_edit
                    //                 +array_edit key='tags' label='tags' direct=true
                    //             else
                    //                 +array_view key='tags' label='tags' direct=true
                    //         .ui.divider
                    .ui.label #{views} views
                    |#{tags.length} tags
                    +array_edit key='tags' direct=true
                    
                    each tags 
                        .ui.compact.button.add_tag #{this}
                    if is_admin
                        +print_this
                        
                        
