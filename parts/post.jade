                        each tags 
                            .ui.compact.large.circular.button.add_tag #{this}
                    if tone
                        if session_key_value_is 'view_post_section' 'tone'
                            +tone
                    
                    if watson
                        if session_key_value_is 'view_post_section' 'analysis'
                            .spacer
                            i.large.tag.icon
                            .spacer
                            +watson_view
                    if session_key_value_is 'view_post_section' 'comments'
