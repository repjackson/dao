template(name='posts')
    .ui.padded.stackable.grid
        .four.wide.column
            // .ui.button 
            //     |debit count
            // .ui.button 
            //     |debit amount
            // .ui.button 
            //     |credit count
            // .ui.button 
            //     |credit amount
            // +post_cloud
            .ui.inline.big.header 
                // i.calendar.big.icon
                +icolor name='calendar'
                span.mobile.hidden posts
            if is_admin
                .ui.icon.button.add_post
                    i.plus.big.green.icon
                    // |add post
        .twelve.wide.column
            .scrolling
                .ui.stackable.four.cards
                    each post_docs
                        +post_item


template(name='post_item')
    .ui.card
        if image_id
            a.pointer(href="/post/#{_id}/view")
                img.ui.image(src="{{c.url image_id height=500 width=500 gravity='face' crop='fill'}}")
        .content
            a.ui.header(href="/post/#{_id}/view") #{title}
            // |#{when}
        .content
        



template(name='post_view')
    with current_doc
        .ui.stackable.padded.grid
            .middle.aligned.row 
                .sixteen.wide.column
                    a(href="/posts")
                        +icolor name='blog' cl='ui image inline pointer'
                    .ui.small.inline.header(title='viewing post')
                        +icolor name='paper'
                        // i.calendar.icon
                        // |view post
                    .ui.large.inline.header #{title}
                    // div
                    // .ui.inline.grey.header {{from_now start_datetime}}
                    
                    if can_edit
                        a.edit_post(href="/post/#{_id}/edit" title='edit')
                            i.large.blue.link.pencil.circular.icon

            .row 
                .four.wide.column
                    img.ui.fluid.rounded.image(src="{{c.url image_id }}")
                    .ui.tertiary.segment
                        .ui.header 
                            small author
                        a.ui.header(href="/user/#{_author.username}") 
                            img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{_author.username}
                    .ui.small.grey.header 
                        i.line.chart.icon
                        |stats
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    .ui.hidden.divider
                .twelve.wide.column
                    // a.ui.header(href="/user/#{target.username}")
                    //     |#{target.username}
                    |!{content}
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    // +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                // .four.wide.column
                

                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit

template(name='post_edit')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.circular.icon.green.big.button(href="/post/#{_id}/view" title='save')
                        i.checkmark.big.icon
                .eight.wide.center.aligned.column
                    .ui.header 
                        i.calendar.icon
                        
                        |edit post
                .four.wide.center.aligned.column
                    .ui.red.circular.icon.button.delete_item(title='delete')
                        i.large.remove.icon
            .row
                .four.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
