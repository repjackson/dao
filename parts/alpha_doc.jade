template(name='alpha_doc_edit')
    with current_doc
        .ui.stackable.padded.grid
            .four.wide.column
                .ui.header editing alpha
                .ui.header #{title}
                a.ui.large.fluid.button(href="/alpha/#{_id}/view")
                    i.checkmark.icon   
                    |save
                +print_this
                .ui.header block menu
                each blocks
                    .ui.button.add_module 
                        i.icon(class=icon)
                        |#{title}
            .twelve.wide.column
                // .ui.header modules
                // each old_modules
                //     +module_edit
                .ui.header block modules
                each modules
                    +module_edit
    if is_admin
        +block_editor
        
        
template(name='module_edit')        
    .ui.fluid.segment
        a.ui.header.toggle_section.pointer
            .ui.header block title: #{block_title}
            small #{doc_key}:
            |#{alpha_value}
            // if viewing_module
            //     i.chevron.down.small.icon
            // else
            //     i.chevron.right.small.icon
        // if viewing_module
        .ui.header block slug: #{block_slug}
        .ui.header block title: #{block_title}
        .ui.header block id: #{block_id}
        .ui.header module_key: #{module_key}
        div
        .ui.input 
            label key
            input.module_key(type='text')
        +text_edit key='doc_key' direct=true
        .ui.header key: #{doc_key}
        .ui.small.header module type: #{block_title}
        //- .ui.small.header block slug: #{block_slug}
        +Template.dynamic template=alpha_field_edit
        .ui.icon.button.remove_module
            i.remove.icon

        
        
        
        
        
        
        
template(name='alpha_doc_view')
    with current_doc
        .ui.stackable.padded.grid
            .four.wide.column
                a.ui.fluid.button(href="/alpha")
                    i.left.chevron.icon
                    |alpha
                .ui.header #{title}
                a.ui.large.circular.icon.basic.button(href="/alpha/#{_id}/edit")
                    i.pencil.icon
                .ui.header #{_author_username}
                +single_user_view key='_author_id'
                // with _author_id
                
                //     +user_card
                +print_this
            .twelve.wide.column
                each modules
                    +module_view


