template(name='tribe_view')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row
                .four.wide.center.aligned.column
                    // if can_edit
                    a(href="/tribes" title='tribes')
                        i.circular.large.fire.link.icon
                .eight.wide.center.aligned.column
                    if image_id
                        img.ui.avatar.image(src="{{c.url image_id height=200 width=200 gravity='face' crop='fill'}}")
                    else
                        i.circular.large.fire.icon
                    .ui.center.aligned.inline.header 
                        small viewing 
                        |#{title}
                        if private
                            i.lock.icon(title='private')
                        small tribe
                .four.wide.center.aligned.column
                    if can_edit
                        a.edit_tribe(href="/tribe/#{_id}/edit")
                            i.big.pencil.circular.link.icon
            .row 
                .four.wide.column
                    .ui.header 
                        i.newspaper.icon
                        |#{post_count}
                        |posts
                        
                    +vote
                    .ui.header 
                        i.hand.holding.icon
                        |#{offer_count}
                        |offers
                    .ui.header
                        i.marker.icon 
                        |#{location}
                    .ui.header 
                        small leader
                    a.ui.header(href="/user/#{_author.username}") 
                        img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                        |#{_author.username}
                    +image_view key='image_id' label='image' direct=true
                .eight.wide.column
                    .ui.accordion
                        .active.title
                            .ui.grey.inline.header 
                                i.rss.icon 
                                |latest
                            i.dropdown.icon
                        .active.content
                            .ui.feed
                                each latest_updates
                                    .event
                                        .label 
                                            img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                                            
                                        .content
                                            .summary
                                                a.user(href="/user/#{_author_username}") #{_author_username}
                                                |#{title} #{price}
                                                each tags 
                                                    .ui.label #{this}
                                            .meta 
                                                i.clock.icon 
                                                |#{when}
                                                +voting_small
                                            if key_value_is 'model' 'debit'
                                                i.large.gift.icon
                                                |#{seller.username}
                                            else if key_value_is 'model' 'post'
                                                i.large.newspaper.icon
                                            else
                                                .ui.label #{model}
                        .title
                            .ui.inline.header 
                                i.newspaper.icon
                                |posts
                            i.dropdown.icon
                        .content
                            .ui.icon.circular.button.add_tribe_post
                                i.plus.icon
                            .ui.link.large.selection.list
                                each tribe_posts
                                    a.item(href="/post/#{_id}/view") #{title}
                        .title
                            .ui.inline.header 
                                i.info.icon
                                |info
                            i.dropdown.icon
                        .content
                            +textarea_view key='description' label='description' direct=true
                            +array_view key='tags' label='tags' direct=true
                        .title
                            .ui.inline.header 
                                i.chat.icon
                                |comments
                            i.dropdown.icon
                        .content
                            +comments
                        .title
                            .ui.inline.header 
                                i.coins.icon
                                |credits
                            i.dropdown.icon
                        .content
                            +tribe_finance
                        .title
                            .ui.inline.header 
                                i.certificate.icon
                                |badges
                            i.dropdown.icon
                        .content
                            +tribe_badges
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.button.add_tribe_gift
                        i.large.gift.icon
                        |gift
                    .ui.button.add_tribe_post
                        i.newspaper.large.icon
                        |post
                    .ui.button
                        i.picture.icon
                        |add image
                    .ui.button
                        i.concierge.bell.icon
                        |request
                    .ui.header 
                        i.chess.king.icon
                        |chiefs
                    +multi_user_view key='chief_ids' label='chiefs' direct=true
                    .ui.header 
                        i.users.icon
                        |members
                    +multi_user_view key='member_ids' label='members' direct=true



