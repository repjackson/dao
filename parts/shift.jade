template(name='shifts')
    .ui.padded.stackable.grid
        .four.wide.column
            .ui.inline.header 
                +icolor name='clock' 
                |shifts
            div
            .ui.inline.header
                i.marker.red.icon 
                |location
            .ui.button 
                |farm 
            .ui.button
                | the stand
            .ui.button
                | riverside
            if is_admin
                .ui.icon.circular.button.add_shift
                    i.plus.green.icon
                    // |add shift
        .twelve.wide.column
            .scrolling
                .ui.stackable.six.cards
                    each next_shifts
                        +shift_item
            if is_admin
                .ui.inline.header 
                    i.shield.icon
                    |shift templates
                .ui.button.add_shift_template
                    i.plus.icon
                    |add shift template
                .scrolling
                    .ui.stackable.six.cards
                        each shift_templates
                            +shift_template_card

        .sixteen.wide.column
            // +shift_cloud


template(name='shift_item')
    a.card(href="/shift/#{_id}/view")
        .image
            if st.image_id
                img.ui.raw.image(src="{{c.url st.image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/shift/#{_id}/view")
                |#{shift_template.title}
            .ui.list 
                .item #{date} date
                .item from {{from_now st.start_datetime}}
                .item to {{from_now st.end_datetime}}
                // .item #{end_time} end time
                .item #{leader.username} leader
            .ui.list
                each contributers
                    .item #{username} contributer
                //- |#{username}
        .content
        
        
        
template(name='shift_card')
    .card
        .image
            img.ui.raw.image(src="{{c.url job.image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/shift/#{_id}/view")
                |#{job.title}
                |#{title}
            .ui.basic.label from {{long_date start_datetime}}
                small {{from_now start_datetime}}
            .ui.basic.label to {{long_date end_datetime}}
            .item to {{from_now end_datetime}}
            .item #{end_time} end time
            .item #{steward.username} leader(s)
            .ui.list
                each contributers
                    .item #{username} contributer
                //- |#{username}
        a.ui.button(href="/shift/#{_id}/view")
            |view
            i.right.chevron.icon


template(name='shift_view')
    with current_doc
        .ui.stackable.padded.grid
            .center.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.fluid.big.compact.button(href="/shifts")
                        // i.chevron.left.icon
                        // i.large.clock.icon
                        +icolor name='clock' cl='ui inline mini image'
                        |shifts
                .eight.wide.center.aligned.column
                    .ui.header 
                        +icon name='clock'
                        |view shift 
                        |#{title}
                .four.wide.center.aligned.column
                    if can_edit 
                        a.ui.big.circular.blue.icon.button(href="/shift/#{_id}/edit" title='edit shift instance')
                            i.pencil.large.icon
            .row 
                .four.wide.column
                    .ui.header template #{template_id}
                    if st.image_id
                        img.ui.fluid.image(src="{{c.url st.image_id height=500 width=500 gravity='face' crop='fill'}}")
                    a.ui.header(href="/job/#{_id}/view")
                        |#{shift_template.title} shift template
                    +image_view key='image_id' label='image' direct=true
                .eight.wide.column
                    .ui.header
                        |leader:
                        |#{shift_leader.name}
                    .ui.header
                        |participants
                    each recipients
                        a.ui.header(href="/user/#{username}")
                            img.ui.avatar.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{username}
                    +textarea_view key='description' label='description' direct=true
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.green.big.fluid.button.sign_up
                        |sign up
                    .ui.header workers
                    each workers 
                        .ui.header #{username}
                    a.ui.header(href="/shift/#{_id}/view")
                        |#{job.title}
                    .ui.basic.label from {{long_date start_datetime}}
                        small {{from_now start_datetime}}
                    .ui.basic.label to {{long_date end_datetime}}
                    .item to {{from_now end_datetime}}
                    .ui.list
                        each contributers
                            .item #{username} contributer
                            
                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit
template(name='shift_edit')
    with current_doc
        .ui.stackable.padded.grid
            .middle.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.circular.green.icon.button(href="/shift/#{_id}/view" title='save')
                        i.checkmark.huge.icon
                        // |save
                .eight.wide.center.aligned.column
                    .ui.header 
                        +icon name='clock'
                        |edit shift instance
                .four.wide.center.aligned.column
                    .ui.red.icon.circular.button.delete_item(title='delete shift')
                        i.large.remove.icon
            .row 
                .four.wide.column
                    .ui.small.header #{shift_template.title} title
                .eight.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    |#{target.username}
                    +date_edit key='date' label='date' direct=true
                    +textarea_edit key='description' label='description' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    //- +array_edit key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.header
                        i.user.tie.icon
                        |leader
                    with shift_leader
                        a.ui.big.button(href="/user/#{username}") 
                            img.ui.avatar.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{username}
                        i.circular.remove.link.icon.clear_leader
                    unless shift_leader
                        .ui.segment
                            .ui.small.header select steward as leader
                            each unselected_stewards
                                .ui.basic.circular.button.select_leader
                                    img.ui.avatar.compact.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                                    |#{name}
                    +number_edit key='leader_bounty' label='leader bounty' direct=true
                    