template(name='shift_templates')
    .ui.padded.stackable.grid
        .sixteen.wide.column
            // .ui.button 
            //     |debit count
            // .ui.button 
            //     |debit amount
            // .ui.button 
            //     |credit count
            // .ui.button 
            //     |credit amount
            .ui.header 
                i.calendar.icon
                |shift_templates
            if is_admin
                .ui.button.add_shift_template
                    i.plus.icon
                    |add shift_template
            .scrolling
                .ui.stackable.six.cards
                    each next_shift_templates
                        +shift_template_item
        .sixteen.wide.column
            // +shift_template_cloud


template(name='shift_template_item')
    a.card(href="/shift_template/#{_id}/view")
        .image
            img.ui.raw.image(src="{{c.url image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/shift_template/#{_id}/view")
                |#{job.title}
            .ui.list 
                .item #{date} date
                .item from {{from_now start_datetime}}
                .item to {{from_now end_datetime}}
                .item #{end_time} end time
                .item #{steward.username} leader(s)
            .ui.list
                each contributers
                    .item #{username} contributer
                //- |#{username}
        .content
        


template(name='shift_template_card')
    .card
        .image
            img.ui.raw.image(src="{{c.url job.image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/shift_template/#{_id}/view")
                |#{job.title}
                |#{title}
            .ui.basic.label from {{long_date start_datetime}}
                small {{from_now start_datetime}}
            .ui.basic.label to {{long_date end_datetime}}
            .item to {{from_now end_datetime}}
            .item #{end_time} end time
            .item #{steward.username} leader(s)
            .ui.list
                each contributers
                    .item #{username} contributer
                //- |#{username}
        a.ui.button(href="/shift_template/#{_id}/view")
            |view
            i.right.chevron.icon


template(name='shift_template_view')
    with current_doc
        .ui.stackable.padded.grid
            .center.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.fluid.big.compact.button(href="/shift_templates")
                        i.chevron.left.icon
                        i.large.clock.icon
                        |shift_templates
                .eight.wide.center.aligned.column
                    .ui.header 
                        +icon name='clock'
                        |view shift_template 
                        |#{title}
                .four.wide.center.aligned.column
                    if can_edit 
                        a.ui.big.circular.blue.icon.button(href="/shift_template/#{_id}/edit" title='edit shift_template')
                            i.pencil.large.icon
                
            .row 
                .four.wide.column
                    a.ui.header(href="/job/#{_id}/view")
                        |#{job.title} job
                .eight.wide.column
                    .ui.header
                        |leader:
                        |#{shift_template_leader.name}
                    .ui.header
                        |participants
                    each recipients
                        a.ui.header(href="/user/#{username}")
                            img.ui.avatar.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{username}
                    +textarea_view key='description' label='description' direct=true
                    +image_view key='image_id' label='image' direct=true
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    a.ui.header(href="/shift_template/#{_id}/view")
                        |#{job.title}
                    .ui.basic.label from {{long_date start_datetime}}
                        small {{from_now start_datetime}}
                    .ui.basic.label to {{long_date end_datetime}}
                    .item to {{from_now end_datetime}}
                    .ui.list
                        each contributers
                            .item #{username} contributer
                            
                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit
template(name='shift_template_edit')
    with current_doc
        .ui.stackable.padded.grid
            .middle.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.big.circular.green.icon.button(href="/shift_template/#{_id}/view" title='save')
                        i.checkmark.big.icon
                        // |save
                .eight.wide.center.aligned.column
                    .ui.header 
                        +icon name='clock'
                        |edit shift_template instance
                .four.wide.center.aligned.column
                    .ui.red.icon.circular.button.delete_item(title='delete shift_template')
                        i.large.remove.icon
            .row 
                .four.wide.column
                    +image_edit key='image_id' label='image' direct=true
                .eight.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    
                    +text_edit key='title' label='title' direct=true
                    +time_edit key='start_time' label='start time' direct=true
                    +time_edit key='end_time' label='end time' direct=true
                    +textarea_edit key='description' label='description' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    //- +array_edit key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.header
                        i.user.tie.icon
                        |default leader
                    with default_shift_template_leader
                        a.ui.big.button(href="/user/#{username}") 
                            img.ui.avatar.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{username}
                        i.circular.remove.link.icon.clear_default_leader
                    unless default_shift_template_leader
                        .ui.segment
                            .ui.small.header select steward as default leader
                            each unselected_stewards
                                .ui.basic.circular.button.select_default_leader
                                    img.ui.avatar.compact.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                                    |#{name}
                    +number_edit key='default_leader_bounty' label='default leader bounty' direct=true
                    