template(name='user_edit_layout')
    +nav
    .ui.bottom.attached.pushable.segment
        +left_sidebar
        +right_sidebar
        #main_area.global_container.pusher
            with current_user          
                .ui.stackable.padded.grid
                    .row
                        .four.wide.column
                            .ui.center.aligned.large.inline.header
                                +i name='settings'
                                | #{current_user.name}
                            .ui.small.inline.header @#{current_user.username}
                            img.ui.centered.small.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                                
                            a.ui.icon.big.green.button(href="/user/#{current_user.username}/") 
                                i.checkmark.big.icon
                                // strong save
                            a.ui.button(href="/user/#{current_user.username}/edit/info" class="{{isActivePath regex='user_edit_info'}}" title='info') 
                                i.info.large.blue.icon 
                                |info
                            a.ui.button(href="/user/#{current_user.username}/edit/account" class="{{isActivePath regex='user_edit_account'}}" title='account') 
                                i.cog.large.icon 
                                |account
                            // a.ui.button(href="/user/#{current_user.username}/edit/friends" class="{{isActivePath regex='user_edit_friends'}}") 
                            //     i.users.icon 
                            //     |friends
                            // a.ui.button(href="/user/#{current_user.username}/edit/levels" class="{{isActivePath regex='user_edit_alerts'}}") 
                            //     i.shield.icon 
                            //     |levels
                            a.ui.button(href="/user/#{current_user.username}/edit/alerts" class="{{isActivePath regex='user_edit_alerts'}}") 
                                i.bell.big.yellow.icon 
                                |alerts
                            a.ui.button(href="/user/#{current_user.username}/edit/tags" class="{{isActivePath regex='user_edit_tags'}}") 
                                i.tags.icon 
                                |tags
                            a.ui.button(href="/user/#{current_user.username}/edit/privacy" class="{{isActivePath regex='user_edit_privacy'}}") 
                                i.lock.privacy.icon 
                                | privacy
                            a.ui.button(href="/user/#{current_user.username}/edit/badges" class="{{isActivePath regex='user_edit_badges'}}" title='badges') 
                                i.certificate.icon
                                |badges
                            a.ui.big.icon.button(href="/user/#{current_user.username}/edit/membership" class="{{isActivePath regex='user_edit_membership'}}" title='membership') 
                                i.shield.icon 
                                | membership
                        .twelve.wide.column
                            +yield

