template(name='user_edit_food')
    .ui.padded.stackable.grid 
        .row 
            .sixteen.wide.column
                .ui.header
                    i.id.badge.outline.icon
                    | riverside membership
        .row 
            .sixteen.wide.column
                .ui.big.green.button.buy_ethel_tiffen
                    |pay $11 for an Ethel tiffen
                .ui.big.green.button.buy_nicole_tiffen
                    |pay $11 for a nicole tiffen
                each food_orders
                    .ui.segment
                        a.ui.header(href="/m/food_order/#{_id}/view") #{when}
                        if charge 
                            .ui.header charge
                        |#{charge.result.id}
                        .ui.header $#{charge.result.amount}
                        if is_admin
                            +remove_button
                            +print_this
                // +user_edit_finance
                if is_admin
                    .ui.header
                        i.shield.icon
                        |admin
                    +array_edit key='levels' label='levels' direct=true
                    +array_edit key='roles' label='roles' direct=true
